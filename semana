using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace semana
{
    class Program
    {
        static void Main(string[] args)
        {
            for (int i = 0; i < 7; i++)
            {

            int Ds = 0;
            Console.WriteLine("Informe um número correspondente aos dias da semana:");
            Ds = int.Parse(Console.ReadLine());



                switch (Ds)
                {
                    case 1:
                        Console.WriteLine("Hoje é Domingo:");
                        Console.WriteLine("Affs, tedioso Domingo");
                        break;

                    case 2:
                        Console.WriteLine("Hoje é Segunda-Feira:");
                        Console.WriteLine("Affs, Segunda-Feira:");
                        break;

                    case 3:
                        Console.WriteLine("Hoje é Terça-Feira:");
                        Console.WriteLine("Ebaaaaaa, tem aula de banco de dados:");

                        break;

                    case 4:
                        Console.WriteLine("Hoje é Quarta-Feira:");
                        Console.WriteLine(" Ebaaaaaa, tenho aula de WEB:");
                        break;

                    case 5:
                        Console.WriteLine("Hoje é Quinta-Feira:");
                        Console.WriteLine("Hoje é aula com o tio Alex e, de mais uma dose do incrível Linux:");
                        break;

                    case 6:
                        Console.WriteLine("Hoje é Sexta-Feira:");
                        Console.WriteLine("Finalmente minha aula apaixonante de C#:");
                        break;

                    case 7:
                        Console.WriteLine("Hoje é Sábado:");
                        Console.WriteLine("Fim de semana, e não de descanso huehueheue:");
                        break;

                    default:
                        Console.WriteLine("Número não definido:");
                        break;
                }
}
            Console.ReadLine();

        }
        
    }

}
